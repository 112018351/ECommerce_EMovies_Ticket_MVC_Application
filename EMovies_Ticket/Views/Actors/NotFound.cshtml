@{
    ViewData["Title"] = "Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">
                    <h1 class="display-4 text-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i> 404
                    </h1>
                    <h3 class="mb-3 text-dark">Oops! The page or item you are looking for was not found.</h3>
                    <p class="text-muted mb-4">
                        It might have been removed, renamed, or is temporarily unavailable.
                    </p>
                    <a asp-action="GetAllActors" class="btn btn-primary btn-lg">
                        <i class="bi bi-house-door"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
