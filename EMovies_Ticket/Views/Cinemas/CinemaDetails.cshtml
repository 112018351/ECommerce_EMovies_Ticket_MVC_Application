@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="bi bi-person-circle"></i> @Model.Name</h3>
                    @* <a asp-action="GetAllActors" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a> *@
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Model.Logo"
                             class="img-fluid rounded-circle border border-3 border-info shadow-sm"
                             style="width:150px; height:150px; object-fit:cover;" alt="@Model.Name" />
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-card-image"></i> Cinema Logo</dt>
                        <dd class="col-sm-8">
                            <input class="form-control" value="@Model.Logo" readonly />
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-person-badge"></i> Cinema Name</dt>
                        <dd class="col-sm-8">
                            <input class="form-control" value="@Model.Name" readonly />
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-info-circle"></i> Description</dt>
                        <dd class="col-sm-8">
                            <textarea class="form-control" rows="3" readonly>@Model.Description</textarea>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="UpdateCinema" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="GetAllCinemas" class="btn btn-secondary">
                        <i class="bi bi-people"></i> Show All
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function(){
             var output = document.getElementById('profilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>

}