@model Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="bi bi-trash-fill"></i> Delete cinema</h3>
                    <a asp-action="GetAllCinemas" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-4">Are you sure you want to delete this Cinema?</h5>

                    <img src="@Model.Logo"
                         class="img-fluid rounded-circle border border-3 border-danger shadow-sm mb-3"
                         style="width:150px; height:150px; object-fit:cover;" alt="@Model.Name" />

                    <h4 class="text-dark">@Model.Name</h4>
                    <p class="text-muted">@Model.Description</p>

                    <form asp-action="DeleteCinema">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-2 mt-4">
                            <a asp-action="GetAllCinemas" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
