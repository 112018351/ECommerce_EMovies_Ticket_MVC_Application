@model Actor

@{
    ViewData["Title"] = "Update Actor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Update Actor</h3>
                    @* <a asp-action="GetAllActors" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a> *@
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        @* Hidden field for Id *@
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="text-center mb-4">
                            <img id="profilePicturePreview"
                                 src="@Model.ProfilePictureURL"
                                 class="img-fluid rounded-circle border border-3 border-info shadow-sm"
                                 style="width:150px; height:150px; object-fit:cover;" alt="@Model.FullName" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfilePictureURL" class="form-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Bio" class="form-label"></label>
                            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Write short biography..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="GetAllActors">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" value="Update" class="btn btn-warning text-dark">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function(){
            $("#ProfilePictureURL").on("input", function(){
                $("#profilePicturePreview").attr("src", $(this).val());
            });
        });
    </script>
}
